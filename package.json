{
  "name": "loglineos-deploy",
  "version": "1.0.0",
  "description": "LogLineOS - Ledger-only backend deployment",
  "type": "module",
  "scripts": {
    "setup": "npm run sql:schema && npm run sql:manifest && npm run bootstrap:kernels",
    "sql:schema": "echo 'Run sql/01-schema.sql in your Supabase SQL Editor'",
    "sql:manifest": "echo 'Run sql/02-manifest.sql in your Supabase SQL Editor'",
    "deploy:stage0": "supabase functions deploy stage0",
    "deploy:workers": "npm run deploy:observer && npm run deploy:request-worker && npm run deploy:policy-agent",
    "deploy:observer": "supabase functions deploy observer",
    "deploy:request-worker": "supabase functions deploy request-worker",
    "deploy:policy-agent": "supabase functions deploy policy-agent",
    "bootstrap:kernels": "tsx scripts/bootstrap-kernels.ts",
    "bootstrap:policies": "tsx scripts/bootstrap-policies.ts",
    "bootstrap:all": "npm run bootstrap:kernels && npm run bootstrap:policies",
    "verify": "tsx scripts/verify.ts",
    "test:e2e": "tsx scripts/test-e2e.ts",
    "validate:compliance": "tsx scripts/validate-compliance.ts",
    "keys:generate": "tsx scripts/generate-keys.ts"
  },
  "keywords": [
    "ledger",
    "append-only",
    "backend",
    "serverless",
    "supabase"
  ],
  "author": "LogLine Team",
  "license": "MIT",
  "dependencies": {
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.4.0",
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
